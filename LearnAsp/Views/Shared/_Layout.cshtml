<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/LearnAsp.styles.css" asp-append-version="true" />
    </head>
    <body>
        <header>
        <h3><a asp-controller="Home" asp-action="Index">Logo</a></h3>
            <div>
                
            @if (Context.Request.Headers.ContainsKey("Authorization"))
            {
                <a asp-controller="Visit" asp-action="Index">Визиты</a>
                <a asp-controller="Account" asp-action="Logout">Выйти</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Авторизация</a>
            }
            </div>
        </header>
        <div class="container">
            @RenderBody()
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script asp-src-include="~/js/**/*.js"></script>
    </body>
</html>
